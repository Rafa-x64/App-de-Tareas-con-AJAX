# Usa imagen oficial de PHP con Apache
FROM php:8.2-apache

# Habilita mod_rewrite para rutas limpias
RUN a2enmod rewrite

# Establece el directorio público como raíz del servidor
COPY ./src/ /var/www/html/

# Establece permisos adecuados
RUN chown -R www-data:www-data /var/www/html
RUN chmod -R 755 /var/www/html

# Configura Apache para servir index.php por defecto
RUN echo "DirectoryIndex index.php" >> /etc/apache2/apache2.conf

# Instala Composer globalmente
RUN curl -sS https://getcomposer.org/installer | php && \
    mv composer.phar /usr/local/bin/composer

# Instala dependencias si composer.json está presente
WORKDIR /var/www/html/
RUN if [ -f "composer.json" ]; then composer install --no-dev --optimize-autoloader; fi

# Reinicia Apache para aplicar configuraciones
RUN service apache2 restart

# Expone el puerto 80
EXPOSE 80
